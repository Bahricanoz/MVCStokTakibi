
@{
    ViewBag.Title = "Musekle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-top:10px;">
    <h3>Müşteri Ekleme Sayfası</h3>
</div>
<form method="post" class="form-group">
    <div style="margin-top:10px">
        <label>Müşteri Adı</label>
        <input type="text" name="Musad" class="form-control" required />
    </div>
    <div style="margin-top:10px">
        <label>Müşteri Soyadı</label>
        <input type="text" name="Mussoyad" class="form-control" required />
    </div>
    <div style="margin-top:10px">
        <label>Müşteri Şehir</label>
        <input type="text" name="Sehir" class="form-control" required />
    </div>
    <div style="margin-top:10px;">
        <button class="btn btn-primary">Müşteri Ekle</button>
    </div>
</form>
