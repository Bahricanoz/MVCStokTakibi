@model MVCSTOKUdemy.Models.Entity.Tbl_Müsteri
@{
    ViewBag.Title = "Musguncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-top:10px;">
    <h3>Müşteri Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("Musguncelle", "Musteri", FormMethod.Post))
{
    <div style="margin-top:10px;">
        <label>Müşteri Id</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:10px;">
        <label>Müşteri Ad</label>
        @Html.TextBoxFor(x => x.Musad, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:10px;">
        <label>Müşteri Soyad</label>
        @Html.TextBoxFor(x => x.Mussoyad, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:10px;">
        <label>Müşteri Sehir</label>
        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:10px;">
       <button class="btn btn-primary">Müşteri Güncelle </button>
    </div>
}