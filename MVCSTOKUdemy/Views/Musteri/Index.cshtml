@using MVCSTOKUdemy.Models.Entity
@model List<Tbl_Müsteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div style="margin:10px 0px;">
    <h2>Müşteri İşlemleri</h2>
    <a href="/Musteri/Musekle/" class="btn btn-info">Müşteri Ekle</a>
</div>
<table class="table table-bordered" id="tbl3">
    <thead>
        <tr>
            <th>Müşteri Id</th>
            <th>Müşteri Ad</th>
            <th>Müşteri Soyad</th>
            <th>Şehir</th>
            <th>Durum</th>
            <th>İşlemler</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @{ string durum = "";}
        @foreach (var x in Model)
        {
            if (x.Durum == true)
            {
                durum = "Aktif";
            }
            if (x.Durum == false)
            {
                durum = "Pasif";
            }
            <tr>
                <td>@x.Id</td>
                <td>@x.Musad</td>
                <td>@x.Mussoyad</td>
                <td>@x.Sehir</td>
                <td>@durum</td>
                <td><a href="/Musteri/Aktifyap/@x.Id" class="btn btn-outline-success">Aktif Yap</a> <a href="/Musteri/Pasifyap/@x.Id" class="btn btn-outline-danger">Pasif Yap</a></td>
                <td><a href="/Musteri/Musguncelle/@x.Id" class="btn btn-warning">Müşteri Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl3').dataTable();
</script>
