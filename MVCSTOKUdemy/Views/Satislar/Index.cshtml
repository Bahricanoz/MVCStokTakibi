@using MVCSTOKUdemy.Models.Entity
@model List<tbl_satis>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin:10px 0px;">
    <h3>Satış İşlemleri</h3>
    <a href="/Satislar/Ekle/" class="btn btn-info">Satış Ekle</a>
</div>
<table class="table table-bordered" id="tbl6">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Ad</th>
            <th>Müşteri İsim</th>
            <th>Personel İsim</th>
            <th>Durum</th>
            @*<th>Tarih</th>*@
            <th>İşlemler</th>
            @*<th>Güncelle</th>*@
        </tr>
    </thead>
    <tbody>
        @{ string durum = "";}
        @foreach (var x in Model)
        {
            if (x.durum == true)
            {
                durum = "Aktif";
            }
            if (x.durum == false)
            {
                durum = "Pasif";
            }
            <tr>
                <td>@x.Id</td>
                <td>@x.Tbl_Urun.Urunad</td>
                <td>@x.Tbl_Müsteri.Musad @x.Tbl_Müsteri.Mussoyad</td>
                <td>@x.Tbl_Personel.Personelad @x.Tbl_Personel.Personelsoyad</td>
                <td>@durum</td>
                @*<td>@x.tarih</td>*@
                <td><a href="/Satislar/Aktifyap/@x.Id" class="btn btn-outline-success">Aktif Yap</a> <a href="/Satislar/Pasifyap/@x.Id" class="btn btn-outline-danger">Pasif Yap</a></td>
                @*<td><a href="/Satislar/Guncelle/@x.Id" class="btn btn-warning">Satış Güncelle</a></td>*@
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
<script>
    $('#tbl6').dataTable();
</script>