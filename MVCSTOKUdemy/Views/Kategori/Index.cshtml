@using MVCSTOKUdemy.Models.Entity
@model List<Tbl_Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin:10px 0px;">
    <h3>Kategori İşlemleri</h3>
    <a href="/Kategori/KatEkle/" class="btn btn-info">Kategori Ekle</a>
</div>
<table class="table table-bordered" id="tbl2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Ad</th>
            <th>Durum</th>
            <th>İşlemler</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @{ string durum = "";}
        @foreach (var x in Model)
        {
            if (x.Durum == true)
            {
                durum = "Aktif ";
            }
            if (x.Durum == false)
            {
                durum = "Pasif";
            }
            <tr>
                <td>@x.Id</td>
                <td>@x.Kategoriad</td>
                <td>@durum</td>
                <td style="width:250px;"><a href="/Kategori/Aktifyap/@x.Id" class="btn btn-outline-success">Aktif Yap</a>  <a href="/Kategori/Pasifyap/@x.Id" class="btn btn-outline-danger">Pasif Yap</a></td>
                <td style="width:250px;"><a href="/Kategori/Kategoriguncelle/@x.Id" class="btn btn-warning">Kategori Düzenle</a></td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl2').dataTable();
</script>
